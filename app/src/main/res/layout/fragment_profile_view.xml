<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".fragments.ProfileViewFragment">

    <!-- Profile Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="6dp"
            android:text="Customer"
            android:textColor="@color/gray_400"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- Edit Button -->
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_blue_600"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/btnReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_blue_600"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_blue_600"
        android:layout_gravity="end"
        android:layout_marginBottom="16dp" />

    <!-- Profile Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:showDividers="middle">

        <!-- Email -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/iconEmail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconEmail"
                android:layout_marginStart="12dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tvEmailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="abc@gmail.com"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Phone Number -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/iconAccountStatus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone_icon"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvAccountStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Status"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconAccountStatus"
                android:layout_marginStart="12dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tvAccountStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="(94)77 555-0133"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Address -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">
            <ImageView
                android:id="@+id/iconAddress"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconAddress"
                android:layout_marginStart="12dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tvAddressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="No. 123, Walivite,Malabe."
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Log Out Button -->
        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:backgroundTint="@color/light_blue_600"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</LinearLayout>
