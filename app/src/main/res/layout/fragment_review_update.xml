<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReviewUpdateFragment"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Top section with a back button and title -->
    <LinearLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Review"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Update review prompt -->
    <TextView
        android:id="@+id/tvUpdateYourReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Your Review"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/topSection"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <!-- Input field for updating the review -->
    <EditText
        android:id="@+id/etReviewInput"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Add Review"
        android:background="@drawable/rounded_border"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_below="@id/tvUpdateYourReview" />

    <!-- Update button -->
    <Button
        android:id="@+id/btnUpdateReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Review"
        android:backgroundTint="@color/light_blue_600"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</RelativeLayout>